{% extends 'base.html.twig' %}
{% block body %}
<form method="get" action="">
    <label for="search_input">Search Clothes</label><br />
    <input name="search" id="search_input">
    <input type="submit">
</form>
<h2>Results</h2>
<section>
    <ul>
        {% for result in results %}
            <li>{% include 'NateVegasShopBundle:Search:searchItem.html.twig' %}</li>
        {% endfor %}
        <li>{% include 'NateVegasShopBundle:Search:searchItem.html.twig' with { 'result': 'record player'} %}</li>
    </ul>
</section>
{% endblock %}